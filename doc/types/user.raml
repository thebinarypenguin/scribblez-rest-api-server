#%RAML 1.0 DataType
type: object
properties:

  username:
    type: string
    pattern: ^[a-z0-9_]+$
    minLength: 3
    maxLength: 20
    required: true

  real_name:
    type: string
    minLength: 1
    maxLength: 80
    required: true

  email_address:
    type: string
    minLength: 1
    maxLength: 80
    required: true
